@model IEnumerable<SmartMvc.Core.Domain.Template>
@using OneCard.MVC.Helpers
@{
    ViewBag.Title = @Resources.Site.Templates;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">

        <div class="panel-heading">
            <h2>@Resources.Site.Templates</h2>
            <div class="create-btn">
                @Html.ActionLink(@Resources.Site.AddTemplate, "Create", null, new { @class = "btn btn-info" })
            </div>
        </div>

        <div class="panel-body">
            @Html.Partial("~/Views/Shared/_MessageResult.cshtml", ViewData)
            <div id="TableList">
                <table class="table datatable">
                    <thead>
                        <tr>
                            <th>
                                @Resources.Site.RowNo
                            </th>
                            <th>
                                @Resources.Site.CategoryType
                                @*@Html.DisplayNameFor(model => model.CategoryType.CtId)*@
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TempCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TempTitle)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.TempPath)
                                </th>*@
                            @*<th>
                                    @Html.DisplayNameFor(model => model.TempDescription)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.TempIsDefualt)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.TempAddDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TempModifyDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TempUserId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TempModifyUserId)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.TempPriority)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.TempIsDeleted)
                                </th>*@
                            @*<th>
                                    @Html.DisplayNameFor(model => model.TempIsPublished)
                                </th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int rowNo = 0; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(rowNo += 1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryType.CtTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TempCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TempTitle)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.TempPath)
                                    </td>*@
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.TempDescription)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.TempIsDefualt)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.TempAddDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TempModifyDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TempUserId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TempModifyUserId)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.TempPriority)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.TempIsDeleted)
                                    </td>*@
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.TempIsPublished)
                                    </td>*@
                                <td>
                                    @Html.ActionLink(@Resources.Site.Edit, "Edit", new { id = item.TempId }, new { @class = "btn btn-info  fa fa-edit" })

                                    <a href="#" onclick="showPopup('@Url.Action("Details", "Templates",  new { id = item.TempId })', '@String.Format("{0}",item.TempTitle) ')"
                                       title='@Resources.Site.Details' class="btn btn-default">@Resources.Site.Details</a>
                                    @if (!item.TempIsDefualt)
                                    {
                                        <a href="#" onclick="showPopup('@Url.Action("Delete", "Templates",  new { id = item.TempId })', '@String.Format("{0}",item.TempTitle) ')"
                                           title='@Resources.Site.Delete' class="btn btn-danger fa fa-trash-o">@Resources.Site.Delete</a>
                                        <a href="#" onclick="showPopup('@Url.Action("SetTemplateDefualt", "Templates",  new { id = item.TempId })', '@String.Format("{0}",item.TempTitle) ')"
                                           title='@Resources.Site.SetAsDefualt' class="btn btn-success">@Resources.Site.SetAsDefualt</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @if (CultureHelper.IsRtl)
    {
        <script>
            var lang = 'ar';
            initDatatable(lang);
        </script>
    }
    else
    {
        <script>
            var lang = 'en';
            initDatatable(lang);
        </script>
    }
}
