@model IEnumerable<SmartMvc.Core.Domain.CategoryType>
@using OneCard.MVC.Helpers
@{
    ViewBag.Title = @Resources.Site.CategoryTypes;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel-heading">
            <h2>@Resources.Site.CategoryTypes</h2>
            <div class="create-btn">
                @Html.ActionLink(@Resources.Site.CreateCategoryType, "Create", null, new { @class = "btn btn-info" })
            </div>

        </div>
        <div class="panel-body">
            @Html.Partial("~/Views/Shared/_MessageResult.cshtml", ViewData)

            <div id="TableList">
                <table class="table datatable">
                    @*table-striped*@
                    @*id="TableList"*@
                    <thead>
                        <tr>
                            @*class="thead-dark"*@
                            <th>
                                @Resources.Site.RowNo
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CtTitle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CtCode)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.CtDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CtPriority)
                            </th>
                            <th>
                                @Resources.Site.ControlButtons
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int rowNo = 0; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(rowNo += 1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CtTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CtCode)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CtDescription)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CtPriority)
                                </td>
                                <td>
                                    @*@Html.ActionLink(@Resources.Site.Details, "Details", new { id = item.CtId }, new { @class = "btn btn-default" })*@
                                    @Html.ActionLink(@Resources.Site.Edit, "Edit", new { id = item.CtId }, new { @class = "btn btn-info  fa fa-edit" })
                                    <a href="#" onclick="showPopup('@Url.Action("Delete", "CategoryTypes",  new { id = item.CtId })', '@String.Format("{0}",item.CtTitle) ')"
                                       title='@Resources.Site.Delete' class="btn btn-danger fa fa-trash-o">@Resources.Site.Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @if (CultureHelper.IsRtl){
        <script>
            var lang ='ar';
            initDatatable(lang);
        </script>
    }
    else{
        <script>
                var lang = 'en';
                initDatatable(lang);
            </script>
        }
}